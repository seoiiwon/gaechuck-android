<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/noticeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="교내공지"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"/>

        <ImageView
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_btn"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 설명 텍스트 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="교내 공지를 한 눈에 확인해보세요"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- 검색 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="내용을 검색해보세요"
            android:textSize="12sp"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/search_icon" />
    </LinearLayout>

    <!-- 탭 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/tabAllLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/tab_colors" />

            <View
                android:id="@+id/tabAllUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gnu_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabInstitutionLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabInstitution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기관"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/tab_colors" />

            <View
                android:id="@+id/tabInstitutionUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gnu_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabAcademicLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabAcademic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학사"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/tab_colors" />

            <View
                android:id="@+id/tabAcademicUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gnu_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabScholarshipLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabScholarship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장학"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/tab_colors" />

            <View
                android:id="@+id/tabScholarshipUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gnu_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabRecruitmentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tabRecruitment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채용"
                android:padding="8dp"
                android:gravity="center"
                android:textColor="@color/tab_colors" />

            <View
                android:id="@+id/tabRecruitmentUnderline"
                android:layout_width="wrap_content"
                android:layout_height="4dp"
                android:visibility="invisible"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gnu_blue" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="10월 22일"
            android:textSize="12sp"
            android:textColor="#FF8A8D8F"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noticeRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:overScrollMode="never"
        tools:listitem="@layout/fragment_notice_univ" />


</LinearLayout>
