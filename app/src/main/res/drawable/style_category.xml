<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape>
            <solid android:color="#002F440D"/> <!-- 5% 투명도를 적용한 색 (#002F44의 5%) -->
            <corners android:radius="24dp"/>  <!-- blur 효과를 비슷하게 구현 -->
        </shape>
    </item>

    <!-- 본체 -->
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <corners android:radius="50dp"/>
            <stroke android:color="#49E9E9E9" android:width="1dp"/>
        </shape>
    </item>
</layer-list>